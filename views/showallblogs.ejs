<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ"
      crossorigin="anonymous"
    />
    <title>Document</title>
  </head>
  <body>
    <style>
      body {
        background: linear-gradient(to bottom right, #4d79ff, #9966cc);
      }
      .container {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        height: 100vh;
      }
      .table-container {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
      }
      table {
        background-color: #fff;
        border-radius: 10px;
      }
      td {
        background-color: #f2f8ff;
        text-align: center;
      }
      th {
        text-align: center;
        font-size: 20px;
      }
    </style>

    <div class="container">
      <a class="btn btn-primary mb-4" href="/blogsform">Add New Blog</a>
      <div class="table-container">
        <table class="table table-striped table-bordered table-dark">
          <thead>
            <tr>
              <th scope="col">Blog Title</th>
              <th scope="col">Blog Body</th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% for (const b of blog) { %>
            <tr>
              <td><%=b.title%></td>
              <td><%= b.body%></td>
              <td>
                <a href="/blogdetails/<%= b._id %>" class="btn btn-primary">
                  Details
                </a>
              </td>
              <td>
                <a href="/blogsupdateform/<%= b._id %>" class="btn btn-primary">
                  Update</a
                >
              </td>
              <td>
                <a href="/blogdelete/<%= b._id %>" class="btn btn-danger">
                  Delete</a
                >
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
